<html>
    <head>
        <title>ChatBot</title>
    </head>
    <body>

        <h1>Ask a question!</h1>

        <form action="/chatgpt" method="POST">
            <input type="text" name="prompt" required/>
            <button type="submit">Submit</button>
        </form>

        <% if (response) { %>
            <h2>Response:</h2>
            <p><%= response %></p>
        <% } %>

    </body>
</html>